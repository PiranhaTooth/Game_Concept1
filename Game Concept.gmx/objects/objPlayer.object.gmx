          <argument>
            <kind>1</kind>
            <string>//establish movement variables
up = keyboard_check(ord('W'));
left = keyboard_check(ord('A'));
down = keyboard_check(ord('S'));
right = keyboard_check(ord('D'));
sprint = keyboard_check(vk_shift);
attack = mouse_check_button_pressed(mb_left);

//state machine for movement
switch (state)
{
    case "ATTACK_SWORD_START":
    {
        image_speed = 0;
        vx = 0;
        vy = 0;
        timer = 15;
        
        if sprite_index = spr_player_right
        {
            sprite_index = sprPlayerAttackRight;
            instance_create(x,y,objHitboxRight);
        }
        
        if sprite_index = spr_player_left
        {
            sprite_index = sprPlayerAttackLeft;
            instance_create(x,y,objHitboxLeft);
        }
        
        if sprite_index = spr_player_up
        {
            sprite_index = sprPlayerAttackUp;
            instance_create(x,y,objHitboxUp);
        }
        
        if sprite_index = spr_player_down
        {
            sprite_index = sprPlayerAttackDown;
            instance_create(x,y,objHitboxDown);
        }
        
        state = "ATTACK_SWORD";
        
        break;
    }
    
    case "ATTACK_SWORD":
    {
        if timer &gt; 0
        {
            timer -= 1;
        }
        else
        {
            if (sprite_index = sprPlayerAttackRight) sprite_index = spr_player_right;
            if (sprite_index = sprPlayerAttackLeft) sprite_index = spr_player_left;
            if (sprite_index = sprPlayerAttackUp) sprite_index = spr_player_up;
            if (sprite_index = sprPlayerAttackDown) sprite_index = spr_player_down;
            
            state = "IDLE";
        }
        
        break;
    }
    
    case "IDLE":
    {
        image_speed = 0;
        vx = 0;
        vy = 0;
        
        script_execute(scrCheckInput);
        
        break;
    }
    case "UP":
    {
        image_speed = room_speed/500;
        sprite_index = spr_player_up;
        
        vx = 0;
        vy = -1 * player_speed;
        
        script_execute(scrCheckInput);

        break;
    }
    case "DOWN":
    {
        image_speed = room_speed/500;
        sprite_index = spr_player_down;
        
        vx = 0;
        vy = player_speed;
        
        script_execute(scrCheckInput);
        
        break;
    }
    case "LEFT":
    {
        image_speed = room_speed/500;
        sprite_index = spr_player_left;
        
        vx = -1 * player_speed;
        vy = 0;
        
        script_execute(scrCheckInput);

        break;
    }
    case "RIGHT":
    {
        image_speed = room_speed/500;
        sprite_index = spr_player_right
        
        vx = player_speed;
        vy = 0;
        
        script_execute(scrCheckInput);

        break;
    }
}

//if you press shift increase speed by 1
if sprint
{
    player_speed = 2.5;
}
else
{
    player_speed = 1.5;
}

x += vx;
y += vy;


//room border clamp
x = clamp(x, 0, room_width);
y = clamp(y, 0, room_height);

//window_mouse_set(clamp(window_mouse_get_x(), 0, window_get_width()), clamp(window_mouse_get_y(), 0, window_get_height()));
</string>
